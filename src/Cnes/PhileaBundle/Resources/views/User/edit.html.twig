    </div>
<div class="row">
 <div class="col-md-3">
    <h1>Edition</h1>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form)}}
        {{ form_label(edit_form.username)}}
        {{ form_errors(edit_form.username)}}
        {{ form_widget(edit_form.username)}}
    
        {{ form_label(edit_form.email)}}
        {{ form_errors(edit_form.email)}}
        {{ form_widget(edit_form.email)}}

        {{ form_label(edit_form.password)}}
        {{ form_errors(edit_form.password)}}
        {{ form_widget(edit_form.password)}}
        
        {{ form_label(edit_form.enabled)}}
        {{ form_errors(edit_form.enabled)}}
        {{ form_widget(edit_form.enabled)}}
    <br>
        {{ form_label(edit_form.locked)}}
        {{ form_errors(edit_form.locked)}}
        {{ form_widget(edit_form.locked)}}
    <br>
        
    <div class="borderRole">
        <h1><span>RÃ´les</span></h1>
        {%for checkbox in edit_form.roles%}
        
        <table>
            
            <tr>
                {%if edit_form.vars.value.username == app.user.username and checkbox.vars.value == "ROLE_SUPER_ADMIN" %}
                {{ form_label(checkbox)}}
                {{ form_errors(checkbox)}}
                {{ form_widget(checkbox, {'attr': {'disabled': 'true'}})}}
                {%else%}
                {{ form_label(checkbox)}}
                {{ form_errors(checkbox)}}
                {{ form_widget(checkbox)}}
                {%endif%}
            </tr>
            
        </table>
        {%endfor%}
    </div>
        
    {{ form_end(edit_form) }}
